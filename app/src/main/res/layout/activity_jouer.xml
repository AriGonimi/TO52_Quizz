<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context="fr.utbm.tx.quizz.Activities.JouerActivity" >
	
	<RelativeLayout
	    android:id="@+id/act_jouer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >
	
	    <TextView
	        android:id="@+id/no_question"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#008000"
	        android:textStyle="bold"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <View
	        android:id="@+id/separator1"
	        android:layout_width="wrap_content"
	        android:layout_height="1.5dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp"
	        android:layout_below="@id/no_question"
	        android:background="@android:color/darker_gray"/>
	    
	    <TextView
	        android:id="@+id/question"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/separator1"
	        android:gravity="center"
	        android:layout_centerHorizontal="true"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <View
	        android:id="@+id/separator2"
	        android:layout_width="wrap_content"
	        android:layout_height="1.5dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp"
	        android:layout_below="@id/question"
	        android:background="@android:color/darker_gray"/>
	    
	    <RadioGroup
	        android:id="@+id/radioGroup1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/separator2" 
	        android:layout_marginTop="15dp"
	        android:padding="10dp"
	        android:layout_centerHorizontal="true" >
	
		  <RadioButton
		      android:id="@+id/radio0"
		      android:layout_width="fill_parent"
		      android:layout_height="fill_parent"
			  android:button="@null"
		      android:checked="true"
		      android:gravity="center" />
	
	       <RadioButton
	            android:id="@+id/radio1"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginTop="3dp"
	            android:gravity="center"
	            android:button="@null"
			   android:checked="false" />
	
	       <RadioButton
	            android:id="@+id/radio2"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginTop="3dp"
	            android:gravity="center"
	            android:button="@null" />
	        
	       <RadioButton
	            android:id="@+id/radio3"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginTop="3dp"
	            android:gravity="center"
	            android:button="@null" />
	    </RadioGroup>
	    
		<RelativeLayout
                android:id="@+id/layoutProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/radioGroup1"
                android:layout_centerHorizontal="true" >
			<ProgressBar
		        android:id="@+id/progressBar"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_centerInParent="true"  
		        android:indeterminate="false"
		        android:max="30"
		        android:progress="30"
		        android:progressDrawable="@drawable/circular_progress_bar" />
	
		    <TextView
		        android:id="@+id/timer"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true" 
		        android:layout_centerHorizontal="true"
		        android:text="@string/timer"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		</RelativeLayout>
	    
	    <Button
	       android:id="@+id/continuer"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/layoutProgressBar"
	       android:layout_centerHorizontal="true"
	       android:drawableRight="@drawable/ic_bouton_jouer"
	       android:text="@string/continuer"
			style="@style/button_text" />
	    
	    <TextView
	        android:id="@+id/info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/ic_affichage_info"
	        android:padding="8dp"
	        android:background="@drawable/info_frame"
	        android:layout_below="@id/continuer"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/click"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/info"
	        android:layout_centerHorizontal="true"
	        android:gravity="center" 
	        android:layout_marginTop="15dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:id="@+id/start_reg"
			android:onClick= "startListening"
			android:src="@drawable/mic"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" />
	</RelativeLayout>

</ScrollView>
